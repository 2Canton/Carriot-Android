<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/transparent_bg"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="4dp"
        android:padding="6dip" >

        <ImageView
            android:id="@+id/imgvLogoNoticia"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/txtvFechaNoticia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/imgvLogoNoticia"
            android:textSize="16sp"
            android:text="hello"
            android:textColor="@color/blanco"
            android:gravity="right" />

        <TextView
            android:id="@+id/txtvTituloNoticia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/imgvLogoNoticia"
            android:layout_below="@id/txtvFechaNoticia"
            android:ellipsize="marquee"
            android:textSize="12sp"
            android:textColor="@color/blanco" />

        <TextView
            android:id="@+id/txtvDescripcionNoticia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/imgvLogoNoticia"
            android:layout_below="@id/txtvTituloNoticia"
            android:ellipsize="marquee"
            android:textSize="12sp"
            android:textColor="@color/blanco" />

        <TextView
            android:id="@+id/txtvAutorNoticia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/imgvLogoNoticia"
            android:layout_below="@id/txtvDescripcionNoticia"
            android:ellipsize="marquee"
            android:textSize="12sp"
            android:textColor="@color/blanco" />


    </RelativeLayout>

</FrameLayout><!-- From: file:/C:/Users/Carlos/Documents/GitHub/Carriot-Android/app/src/main/res/layout/item_noticia.xml -->